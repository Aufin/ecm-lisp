#!/usr/bin/env bash

GETARGS=$(getopt -o l:d:m:c: -- "$@")

eval set -- "$GETARGS"
echo "Have Getargs: $GETARGS"
echo "Have $1 $2"
while :
do
  case "$1" in
    -m) MBOX="$2" ; shift 2 ;;
    -d) DIR="$2"   ; shift 2 ;;
    -l) shift 2 ;;
    -c) shift 2 ;;
     *) echo  This is leftovers "$1" ; break ;;
  esac
done

cd "$DIR"
cat > mhres <<EOF

<MIMEALTPREFS>
text/plain
text/html
</MIMEALTPREFS>

<MIMEEXCS>
image/jpg
image/gif
</MIMEEXCS>

EOF

mhonarc -nothread -rcfile ./mhres $MBOX

cat msg00000.html > index.html
