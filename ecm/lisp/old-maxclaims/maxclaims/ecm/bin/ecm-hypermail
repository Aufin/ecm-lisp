#!/bin/sh
ECM_SCRIPT=$(readlink -f "$0")
 ECM_SCRIPT_PATH=$(dirname "$ECM_SCRIPT")
 echo $ECM_SCRIPT
 . "$ECM_SCRIPT_PATH/../etc/ecm-conf"

 # The claim is the first argument
 ECM_CLAIM=${1-33342} ; shift

 ECM_HYPERMAILCONF=$ECM_SCRIPT_PATH/../etc/hypermail.conf
 ECM_HYPERMAIL_ARCHIVE_PATH=$ECM_ARCHIVE_PATH/$ECM_CLAIM/list/
 
 ECM_HYPERMAIL_ARGS="-u -c $ECM_HYPERMAILCONF \
  -o append_filename=`echo '$DIR/../'$ECM_CLAIM'.mbox'` \
  -d $ECM_HYPERMAIL_ARCHIVE_PATH \
  -o label=\"#$ECM_CLAIM\""

  while true ; do
    case "${1---}" in
        --)  break ;;
        *) ECM_HYPERMAIL_ARGS="$ECM_HYPERMAIL_ARGS $1" ; shift ;;


    esac
done

 hypermail $ECM_HYPERMAIL_ARGS;
 find $ECM_HYPERMAIL_ARCHIVE_PATH -iname '*[0-9].html' -exec sed -i 's/^<br \/>//' {} \;
 
